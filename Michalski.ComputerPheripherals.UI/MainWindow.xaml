<Window x:Class="Michalski.ComputerPheripherals.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Michalski.ComputerPheripherals.UI"
        mc:Ignorable="d"
        Title="Katalog Peryferii Komputerowych" Height="450" Width="800">

    <Window.DataContext>
        <local:MainViewModel/>
    </Window.DataContext>

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <!-- Lista Produktów -->
        <DockPanel Grid.Column="0" Margin="0,0,10,0">
            <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,0,0,5">
                <Button Content="Dodaj Produkt" Command="{Binding AddCommand}" Padding="5,2" Margin="0,0,5,0"/>
                <Button Content="Usuń Zaznaczony" Command="{Binding DeleteCommand}" Padding="5,2"/>
                <Button Content="Dodaj Producenta (Test)" Command="{Binding AddManufacturerCommand}" Padding="5,2" Margin="10,0,0,0"/>
            </StackPanel>

            <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,0,0,5">
                <TextBlock Text="Szukaj:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <TextBox Text="{Binding FilterText, UpdateSourceTrigger=PropertyChanged}" Width="200"/>
            </StackPanel>

            <DataGrid ItemsSource="{Binding ProductsView}" SelectedItem="{Binding SelectedProduct}" AutoGenerateColumns="False" IsReadOnly="True">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Nazwa" Binding="{Binding Name}" Width="*"/>
                    <DataGridTextColumn Header="Cena" Binding="{Binding Price, StringFormat=C}" Width="80"/>
                    <DataGridTextColumn Header="Typ" Binding="{Binding Type}" Width="80"/>
                    <DataGridTextColumn Header="Producent" Binding="{Binding Manufacturer.Name}" Width="100"/>
                </DataGrid.Columns>
            </DataGrid>
        </DockPanel>

        <!-- Formularz Edycji -->
        <StackPanel Grid.Column="1" DataContext="{Binding SelectedProduct}">
            <TextBlock Text="Szczegóły Produktu" FontWeight="Bold" Margin="0,0,0,10"/>

            <TextBlock Text="Nazwa:"/>
            <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,5"/>

            <TextBlock Text="Cena:"/>
            <TextBox Text="{Binding Price, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,5"/>

            <TextBlock Text="Typ:"/>
            <ComboBox ItemsSource="{Binding DataContext.PeripheralTypes, RelativeSource={RelativeSource AncestorType=Window}}"
                      SelectedItem="{Binding Type}" Margin="0,0,0,5"/>

            <TextBlock Text="Producent:"/>
            <ComboBox ItemsSource="{Binding DataContext.Manufacturers, RelativeSource={RelativeSource AncestorType=Window}}"
                      SelectedValue="{Binding ManufacturerId}"
                      SelectedValuePath="Id"
                      DisplayMemberPath="Name"
                      SelectedItem="{Binding Manufacturer}"
                      Margin="0,0,0,10"/>

            <Button Content="Zapisz Zmiany" 
                    Command="{Binding DataContext.UpdateCommand, RelativeSource={RelativeSource AncestorType=Window}}" 
                    Height="30"/>
        </StackPanel>

        <!-- Status Bar -->
        <TextBlock Grid.ColumnSpan="2" VerticalAlignment="Bottom" HorizontalAlignment="Left" 
                   Text="{Binding StatusMessage}" Foreground="Blue" Margin="0,5,0,0"/>
    </Grid>
</Window>